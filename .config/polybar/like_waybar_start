[bar/mybar]
width = 100%
height = 35
offset-y = 0
modules-left = custom/launcher xworkspaces custom/cava
modules-center = clock
modules-right = custom/updates custom/notification custom/weather network bluetooth pulseaudio backlight battery

font-0 = "Font Awesome 6 Free:style=Solid:pixelsize=14"
font-1 = "Font Awesome 6 Brands:style=Regular:pixelsize=14"
font-2 = "Noto Sans:pixelsize=14"

background = #000000
foreground = #ffffff

[module/custom/launcher]
type = custom/text
content = 
click-left = wlogout

[module/custom/cava]
type = custom/script
exec = ~/.config/polybar/cava.sh
tail = true

[module/clock]
type = internal/date
interval = 1
format =   %I:%M %p

[module/custom/updates]
type = custom/script
exec = checkupdates | wc -l
interval = 300
format =  %output%

[module/custom/notification]
type = custom/script
exec = swaync-client -swb
interval = 5
click-left = swaync-client -t -sw
click-right = swaync-client -d -sw

[module/custom/weather]
type = custom/script
exec = python3 ~/.config/waybar/openWeatherMap.py
interval = 600

[module/network]
type = internal/network
interface = wlp2s0
format-connected =  %essid%
format-disconnected = 睊 Disconnected

[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/bluetooth_status.sh
interval = 10
click-left = blueman-manager

[module/pulseaudio]
type = internal/pulseaudio
format-volume =  %volume%%
format-muted = ﱝ Muted
click-left = pavucontrol

[module/backlight]
type = internal/backlight
format = ☀ %percentage%%

[module/battery]
type = internal/battery
format-charging =  %percentage%%
format-discharging =   %percentage%%
format-full =   %percentage%%
